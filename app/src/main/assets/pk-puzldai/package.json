{
  "name": "pk-puzldai",
  "version": "0.3.0",
  "description": "Multi-LLM orchestration framework with agentic execution, memory/RAG, and training data generation",
  "type": "module",
  "bin": {
    "pk-puzldai": "dist/cli/index.js"
  },
  "files": [
    "dist",
    "web",
    "assets/logo.jpg",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run src/cli/index.ts",
    "build": "bun build src/cli/index.ts --outdir dist/cli --target node --packages external && node -e \"try{require('fs').chmodSync('dist/cli/index.js',0o755)}catch(e){}\"",
    "start": "node dist/cli/index.js",
    "test": "bun test",
    "typecheck": "tsc -p tsconfig.typecheck.json",
    "eval": "bun run src/eval/runner.ts --mock",
    "eval:live": "bun run src/eval/runner.ts",
    "agentic-smoke": "powershell -ExecutionPolicy Bypass -File scripts/agentic-smoke/run-pk-puzldai.ps1"
  },
  "dependencies": {
    "@fastify/jwt": "^9.0.0",
    "@fastify/static": "^8.0.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.4",
    "@hono/node-server": "^1.19.7",
    "@lancedb/lancedb": "^0.22.3",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^12.5.0",
    "chalk": "^5.6.2",
    "commander": "^12.1.0",
    "diff": "^8.0.2",
    "execa": "^9.5.1",
    "fastify": "^5.1.0",
    "figlet": "^1.9.4",
    "hono": "^4.11.1",
    "ink": "^6.5.1",
    "ink-select-input": "^6.2.0",
    "ink-text-input": "^6.0.0",
    "ioredis": "^5.4.1",
    "nanospinner": "^1.2.2",
    "node-pty": "^1.0.0",
    "ollama": "^0.5.11",
    "picocolors": "^1.1.1",
    "pino": "^10.1.1",
    "ts-morph": "^27.0.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "^1.1.14",
    "@types/diff": "^7.0.2",
    "@types/node": "^22.19.5",
    "@types/react": "^19.2.7",
    "pino-pretty": "^13.1.3",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kingkillery/Puzld.ai.git"
  },
  "keywords": [
    "ai",
    "llm",
    "claude",
    "gemini",
    "codex",
    "ollama",
    "mistral",
    "orchestrator"
  ],
  "license": "AGPL-3.0-only"
}
